<!--pages/resultPage/resultPage.wxml-->

<view class="container">
  <view class="card-container">
    <image class="card-image {{cardStatus === 'reversed' ? 'reversed' : ''}}" src="{{selectedCard}}" mode="aspectFit"></image>
  </view>
  
  <view class="info-container">
    <view class="card-title">{{cardName}}</view>
    <view class="card-status">{{cardStatus === 'reversed' ? '逆位' : '正位'}}</view>
    
    <view class="info-section">
      <view class="info-label">关键词：</view>
      <view class="info-content">{{cardKeyword}}</view>
    </view>
    
    <view class="info-section">
      <view class="info-label">星座：</view>
      <view class="info-content">{{cardZodiac}}</view>
    </view>
    
    <view class="info-section">
      <view class="info-label">元素：</view>
      <view class="info-content">{{cardElement}}</view>
    </view>
    
    <view class="info-section">
      <view class="info-label">象征：</view>
      <view class="info-content">{{cardSymbol}}</view>
    </view>
    
    <view class="info-section meaning">
      <view class="info-label">牌义解析：</view>
      <view class="info-content">{{cardMeaning}}</view>
    </view>
  </view>
</view>

